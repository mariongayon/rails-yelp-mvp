<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody >

    <% @restaurants.each do |restaurant| %>
      <tr>
        <td class='bold m-2'><%= link_to restaurant.name, restaurant%></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td class='btn btn-dark m-2'><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td class='btn btn-light m-2'><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4 class='btn btn-dark'>
  <%= link_to 'New Restaurant', new_restaurant_path %>
</h4>


